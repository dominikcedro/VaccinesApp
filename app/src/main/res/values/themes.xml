<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VaccineApp" parent="Theme.Material3.Light.NoActionBar">

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/LIGHT_primarycolor</item>
        <item name="colorPrimaryVariant">@color/LIGHT_darkcolor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/LIGHT_darkcolor</item>
        <item name="colorSecondaryVariant">@color/red</item>
        <item name="colorOnSecondary">@color/red</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/LIGHT_backgroundcolor</item>  <!-- used as background for cards -->

        <item name="android:textColor">@color/LIGHT_darkcolor</item>
        <item name="android:windowBackground">@drawable/gradient_background_light</item>
    </style>

    <style name="Theme.VaccineApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.VaccineApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.VaccineApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

<!--    button styles -->
    <style name="ButtonTheme" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/LIGHT_primarycolor</item>
    </style>

    <style name="DatePickerTheme" parent="Theme.VaccineApp">
        <item name="colorAccent">@color/black</item> <!-- Selected day color -->
        <item name="android:textColorPrimary">@color/black</item> <!-- Text color -->
    </style>

    <style name="HeaderTextView" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>

        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>