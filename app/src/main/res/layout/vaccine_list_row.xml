<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="410dp"
        android:layout_height="230dp"
        android:layout_marginTop="87dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="410dp"
            android:layout_height="match_parent"
            android:background="@drawable/background_field_rounded">

            <TextView
                android:id="@+id/tvVaccineName"
                android:layout_width="397dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="Vaccine name"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvRecommendedAge"
                android:layout_width="220dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="9dp"
                android:text="Recommended age:"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvVaccineName" />

            <TextView
                android:id="@+id/tvNumberDoses"
                android:layout_width="220dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="7dp"
                android:text="Number of doses:"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvRecommendedAge" />

            <TextView
                android:id="@+id/tvRemainingDoses"
                android:layout_width="220dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Remaining doses:"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvNumberDoses" />

            <TextView
                android:id="@+id/containerRecommendedAge"
                android:layout_width="70dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:text="101"
                android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@+id/tvRecommendedAge"
                tools:layout_editor_absoluteY="65dp" />

            <TextView
                android:id="@+id/containerNumberDoses"
                android:layout_width="70dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:text="102"
                android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@+id/tvNumberDoses"
                tools:layout_editor_absoluteY="120dp" />

            <TextView
                android:id="@+id/containerDosesRemaining"
                android:layout_width="70dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:text="103"
                android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@+id/tvRemainingDoses"
                tools:layout_editor_absoluteY="176dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>